<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.mappers.departmentMapper">
	
	<resultMap type="Department" id="selectDepartment">
		<id column="department_id" property="departmentId"/>
		<result column="name" property="name"/>
		<result column="register_date" property="registerDate"/>
	</resultMap>
	
	<resultMap type="Employee" id="selectEmployee">
		<id column="employee_id" property="employeeId"/>
		<result column="department_id" property="departmentId"/>
<!-- 		<result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="email" property="email"/>
		<result column="phone" property="phone"/>
 -->	
 	</resultMap>
	
	<resultMap type="Department" id="selectDepartment2">
		<association property="departmentId" resultMap="selectEmployee"/>
	</resultMap>
	    
    <!-- <select id="searchDepartment" resultMap="selectDepartment2"> -->
    <select id="searchDepartment" resultType="Department">
    	<!-- SELECT * FROM department WHERE name LIKE '%${searchContent}%' 
		ORDER BY department_id DESC LIMIT #{pageStart}, #{perPageNum} -->
		SELECT *, (SELECT count(employee_id) FROM employee WHERE employee.department_id = department.department_id) 
		FROM department WHERE name LIKE '%${searchContent}%' 
		ORDER BY department_id DESC LIMIT #{pageStart}, #{perPageNum}
    </select>
    
    <select id="searchDepartmentCount" resultType="int">
		SELECT COUNT(department_id) FROM department WHERE name LIKE '%${searchContent}%'
	</select>
	
	<insert id="insertDepartment" parameterType="Department">
		INSERT INTO department(name) VALUES (#{name})
	</insert>
	
	<select id="selectDepartmentById" resultType="Department">
		SELECT * FROM department WHERE department_id = #{departmentId}
	</select>
	
	<update id="updateDepartment" parameterType="Department">
		UPDATE department SET name = #{name} WHERE department_id = #{departmentId}
	</update>
	
	<delete id="deleteDepartment" parameterType="int">
		DELETE FROM department WHERE department_id = #{departmentId}
	</delete>
</mapper>